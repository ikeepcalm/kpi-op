<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane id="borderPane" maxHeight="400" maxWidth="600" minHeight="400" minWidth="600" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.ua.ikeepcalm.controllers.menu.FilesPageController">
    <left>
        <VBox id="sideBar" prefHeight="400.0" prefWidth="105.0" style="-fx-background-color: #58A4B0;" BorderPane.alignment="CENTER">
            <Button fx:id="createButton" mnemonicParsing="false" onAction="#onCreateFileButtonClicked" prefHeight="57.0" prefWidth="106.0" style="-fx-background-color: transparent; -fx-border-color: a9bcd0; -fx-border-width: 0px 0px 2px 0px;" text="Create" textFill="WHITE">
                <font>
                    <Font name="Corbel" size="19.0" />
                </font>
            </Button>
            <Button fx:id="loadButton" mnemonicParsing="false" onAction="#onLoadFileButtonClicked" prefHeight="57.0" prefWidth="106.0" style="-fx-background-color: transparent; -fx-border-color: a9bcd0; -fx-border-width: 0px 0px 2px 0px;" text="Load" textFill="WHITE">
                <font>
                    <Font name="Corbel" size="19.0" />
                </font>
            </Button>
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteFileButtonClicked" prefHeight="58.0" prefWidth="106.0" style="-fx-background-color: transparent; -fx-border-color: a9bcd0; -fx-border-width: 0px 0px 2px 0px;" text="Delete" textFill="WHITE">
                <font>
                    <Font name="Corbel" size="19.0" />
                </font>
