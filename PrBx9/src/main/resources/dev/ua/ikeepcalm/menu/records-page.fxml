<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane id="borderPane" maxHeight="400" maxWidth="600" minHeight="400" minWidth="600" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.ua.ikeepcalm.controllers.menu.RecordsPageController">
    <left>
        <VBox id="sideBar" prefHeight="400.0" prefWidth="105.0" style="-fx-background-color: #58A4B0;"
              BorderPane.alignment="CENTER">
            <Button onAction="#onCreateButtonClicked" fx:id="createButton" mnemonicParsing="false" prefHeight="57.0"
                    prefWidth="106.0"
                    style="-fx-background-color: transparent; -fx-border-color: a9bcd0; -fx-border-width: 0px 0px 2px 0px;"
                    text="Create" textFill="WHITE">
                <font>
                    <Font name="Corbel" size="19.0"/>
                </font>
            </Button>
            <Button onAction="#onEditButtonClicked" fx:id="editButton" mnemonicParsing="false" prefHeight="58.0"
                    prefWidth="106.0"
                    style="-fx-background-color: transparent; -fx-border-color: a9bcd0; -fx-border-width: 0px 0px 2px 0px;"
                    text="Edit" textFill="WHITE">
                <font>
                    <Font name="Corbel" size="19.0"/>
                </font>
            </Button>
            <Button onAction="#onSortButtonClicked" fx:id="sortButton" mnemonicParsing="false" prefHeight="57.0"
                    prefWidth="106.0"
                    style="-fx-background-color: transparent; -fx-border-color: a9bcd0; -fx-border-width: 0px 0px 2px 0px;"
                    text="Sort" textFill="WHITE">
                <font>
                    <Font name="Corbel" size="19.0"/>
                </font>
            </Button>
            <Button onAction="#onInsertButtonClicked" fx:id="insertButton" mnemonicParsing="false" prefHeight="57.0"
                    prefWidth="106.0"
                    style="-fx-background-color: transparent; -fx-border-color: a9bcd0; -fx-border-width: 0px 0px 2px 0px;"
                    text="Insert" textFill="WHITE">
                <font>
                    <Font name="Corbel" size="19.0"/>
                </font>
            </Button>
            <Button onAction="#onDeleteButtonClicked" fx:id="deleteButton" mnemonicParsing="false" prefHeight="57.0"
                    prefWidth="106.0"
                    style="-fx-background-color: transparent; -fx-border-color: a9bcd0; -fx-border-width: 0px 0px 2px 0px;"
                    text="Delete" textFill="WHITE">
                <font>
                    <Font name="Corbel" size="19.0"/>
                </font>
            </Button>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="stackPane" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <TextArea fx:id="recordsContent" editable="false" prefHeight="362.0" prefWidth="443.0"/>
        </StackPane></center>
</BorderPane>
