<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.geometry.Insets?>
<BorderPane id="borderPane" prefHeight="400" prefWidth="300" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.ua.ikeepcalm.controllers.files.FileDeleteController">
    <center>
        <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10" alignment="CENTER">
                <Label prefHeight="30.0" prefWidth="380.0" text="Name of your file to delete: " textAlignment="CENTER">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Label>
                <TextField fx:id="fileName" maxWidth="400" text="somethingSimple.txt" alignment="CENTER">
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="5"/>
                    </padding>
                </TextField>
                <Label prefHeight="30.0" prefWidth="380.0" text="Path to folder / directory:"
                       textAlignment="CENTER">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Label>
                <TextField fx:id="filePath" maxWidth="400" text="C:\Users\horok\OneDrive\Рабочий стол\MY КPI" alignment="CENTER">
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="5"/>
                    </padding>
                </TextField>
                <Button fx:id="deleteButton" onAction="#onDeleteFileButtonClicked" mnemonicParsing="false" prefHeight="26.0" prefWidth="380.0" text="Delete">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
