<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane id="borderPane" prefHeight="400" prefWidth="300" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.ua.ikeepcalm.controllers.records.RecordSortController">
    <center>
        <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10">
                <Label prefHeight="30.0" prefWidth="380.0" text="In what order of sorting?" textAlignment="CENTER">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
            <ChoiceBox fx:id="orderChoice" prefWidth="150.0" />
            <Label prefHeight="30.0" prefWidth="380.0" text="Sorted by what?" textAlignment="CENTER">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
                <ComboBox fx:id="fieldChoice" prefHeight="26.0" prefWidth="240.0" />
                <Button mnemonicParsing="false" onAction="#onSortButtonClicked" prefHeight="26.0" prefWidth="380.0" text="Sort!">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
